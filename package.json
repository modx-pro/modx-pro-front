{
    "name": "gulp-pug-starter",
    "description": "Frontend development with pleasure",
    "author": "",
    "license": "GPL-3.0-only",
    "scripts": {
        "dev": "gulp",
        "build": "gulp prod --production",
        "build:views": "gulp views --production",
        "build:styles": "gulp styles --production",
        "build:scripts": "gulp scripts --production",
        "build:images": "gulp images --production",
        "build:webp": "gulp webp --production",
        "build:sprites": "gulp sprites --production",
        "build:fonts": "gulp fonts --production",
        "build:favicons": "gulp favicons --production",
        "build:gzip": "gulp gzip --production",
        "lint:styles": "stylelint \"src/**/*.scss\"",
        "lint:styles --fix": "stylelint --fix \"src/**/*.scss\"",
        "lint:scripts": "eslint \"src/js/**/*.js\"",
        "lint:scripts --fix": "eslint --fix \"src/js/**/*.js\"",
        "bem-c": "bem create $* -l src/blocks/components",
        "bem-m": "bem create $* -l src/blocks/modules"
    },
    "devDependencies": {
        "@babel/core": "^7.24.4",
        "@babel/eslint-parser": "^7.24.1",
        "@babel/preset-env": "^7.24.4",
        "@babel/register": "^7.23.7",
        "babel-loader": "^8.3.0",
        "bem-tools-core": "github:bem-tools/bem-tools-core",
        "bem-tools-create": "github:bem-tools/bem-tools-create",
        "browser-sync": "^2.29.3",
        "del": "^6.1.1",
        "eslint": "^8.57.0",
        "gulp": "^4.0.2",
        "gulp-autoprefixer": "^8.0.0",
        "gulp-clean-css": "^4.3.0",
        "gulp-debug": "^4.0.0",
        "gulp-favicons": "^3.0.0",
        "gulp-group-css-media-queries": "^1.2.2",
        "gulp-if": "^3.0.0",
        "gulp-imagemin": "^7.1.0",
        "gulp-newer": "^1.4.0",
        "gulp-plumber": "^1.2.1",
        "gulp-pug": "^4.0.1",
        "gulp-rename": "^2.0.0",
        "gulp-replace": "^1.1.4",
        "gulp-sass": "^5.1.0",
        "gulp-sourcemaps": "^3.0.0",
        "gulp-svg-sprite": "^1.5.0",
        "gulp-watch": "^5.0.1",
        "gulp-webp": "^4.0.1",
        "husky": "^7.0.4",
        "imagemin-giflossy": "^5.1.10",
        "imagemin-jpeg-recompress": "~7.0.0",
        "imagemin-mozjpeg": "^9.0.0",
        "imagemin-pngquant": "~9.0.2",
        "imagemin-webp": "^6.1.0",
        "imagemin-zopfli": "^7.0.0",
        "lint-staged": "^12.5.0",
        "postcss": "^8.4.38",
        "postcss-scss": "^4.0.9",
        "require-dir": "^1.2.0",
        "sass": "^1.74.1",
        "stylelint": "^14.16.1",
        "stylelint-config-standard-scss": "^3.0.0",
        "stylelint-order": "^5.0.0",
        "stylelint-selector-bem-pattern": "^2.1.1",
        "yargs": "^17.7.2"
    },
    "dependencies": {
        "@fancyapps/ui": "^5.0.35",
        "open": "^9.1.0",
        "vanilla-lazyload": "^17.9.0",
        "webpack": "^5.91.0",
        "webpack-stream": "^7.0.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.scss": [
            "stylelint --fix --allow-empty-input"
        ],
        "*.js": [
            "eslint --fix"
        ]
    },
    "packageManager": "yarn@4.1.1"
}
